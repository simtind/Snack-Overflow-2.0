<Window x:Class="SnackOverflowC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnackOverflowC"
        mc:Ignorable="d"
        Title="Snack Overflow" Height="720" Width="1080">
    <Grid x:Name="grid_main">
        <Grid x:Name="grid_idle">
            <Image x:Name="image" Margin="0,30" Source="img/logo.jpg" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <Grid x:Name="grid_purchase" Visibility="Hidden" d:IsHidden="True">
            <Button x:Name="bt_startListening" Content="Button" Margin="138,83.666,186,0" VerticalAlignment="Top" Height="64.627"/>
            <TextBlock x:Name="tb_barcode" Height="74" Margin="138,0,186,78" TextWrapping="Wrap" VerticalAlignment="Bottom"/>

        </Grid>
        <Grid x:Name="grid_cart" Visibility="Hidden" d:IsHidden="True"/>
        <Grid x:Name="grid_addrfid" Visibility="Hidden" d:IsHidden="True"/>

    </Grid>
</Window>
